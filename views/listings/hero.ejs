<% layout("/layouts/boilerplate") %>

<body>
  <!-- Hero Section -->
  <section class="hero-section">
    <div class="hero-content">
      <h1 class="hero-title">Find Your Perfect Stay</h1>
      <p class="hero-subtitle">
        Discover unique homes, apartments, and experiences around the world
      </p>
      <div class="hero-search">
        <form action="/listings" method="GET" class="hero-search-form">
          <input
            type="text"
            name="search"
            placeholder="Where do you want to go?"
            class="hero-search-input"
          />
          <button type="submit" class="hero-search-btn">
            <i class="fa-solid fa-magnifying-glass"></i>
            Explore
          </button>
        </form>
      </div>
    </div>
  </section>

  <!-- Features Section -->
  <section class="features-section">
    <div class="features-container">
      <h2 class="section-title">Why Choose Stayora?</h2>
      <div class="features-grid">
        <div class="feature-card">
          <div class="feature-icon">
            <i class="fa-solid fa-home"></i>
          </div>
          <h3>Unique Properties</h3>
          <p>From cozy apartments to luxury villas, find the perfect place for your next adventure</p>
        </div>

        <div class="feature-card">
          <div class="feature-icon">
            <i class="fa-solid fa-shield-halved"></i>
          </div>
          <h3>Secure Booking</h3>
          <p>Book with confidence. Your safety and security are our top priorities</p>
        </div>

        <div class="feature-card">
          <div class="feature-icon">
            <i class="fa-solid fa-star"></i>
          </div>
          <h3>Verified Reviews</h3>
          <p>Real reviews from real travelers help you make the right choice</p>
        </div>

        <div class="feature-card">
          <div class="feature-icon">
            <i class="fa-solid fa-headset"></i>
          </div>
          <h3>24/7 Support</h3>
          <p>Our support team is always here to help you with any questions</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Popular Destinations -->
  <section class="destinations-section">
    <div class="destinations-container">
      <h2 class="section-title">Popular Destinations</h2>
      <div class="destinations-grid">
        <div class="destination-card">
          <img
            src="https://images.unsplash.com/photo-1570168007204-dfb528c6958f?w=800&q=80"
            alt="Santorini"
            class="destination-image"
          />
          <div class="destination-overlay">
            <h3>Santorini, Greece</h3>
            <p>Stunning sunsets & white architecture</p>
          </div>
        </div>

        <div class="destination-card">
          <img
            src="https://images.unsplash.com/photo-1551882547-ff40c63fe5fa?w=800&q=80"
            alt="Bali"
            class="destination-image"
          />
          <div class="destination-overlay">
            <h3>Bali, Indonesia</h3>
            <p>Tropical paradise & rich culture</p>
          </div>
        </div>

        <div class="destination-card">
          <img
            src="https://images.unsplash.com/photo-1502602898657-3e91760cbb34?w=800&q=80"
            alt="Paris"
            class="destination-image"
          />
          <div class="destination-overlay">
            <h3>Paris, France</h3>
            <p>City of lights & romance</p>
          </div>
        </div>

        <div class="destination-card">
          <img
            src="https://images.unsplash.com/photo-1524492412937-b28074a5d7da?w=800&q=80"
            alt="Tokyo"
            class="destination-image"
          />
          <div class="destination-overlay">
            <h3>Tokyo, Japan</h3>
            <p>Modern meets traditional</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Call to Action -->
  <section class="cta-section">
    <div class="cta-content">
      <h2>Ready to Start Your Journey?</h2>
      <p>Join thousands of travelers who have found their perfect stay</p>
      <div class="cta-buttons">
        <a href="/listings" class="btn-cta-primary">Browse Listings</a>
        <a href="/listings/new" class="btn-cta-secondary">Become a Host</a>
      </div>
    </div>
  </section>
</body>
