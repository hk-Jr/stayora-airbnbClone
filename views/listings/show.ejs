    let coordinates = <%- JSON.stringify(listing.geometry.coordinates) %>;
  <% } else { %>
    let coordinates = null;
  <% } %>
</script>

<body>
  <div class="show-container">
    <!-- Image -->
    <img
      src="<%= listing.image.url %>"
      class="show-image"
      alt="<%= listing.title %>"
    />

    <!-- Listing Info -->
    <div class="listing-header">
      <h2><%= listing.title %></h2>
      <p class="location-info">
        <%= listing.location %>, <%= listing.country %>
      </p>
    </div>

    <div class="listing-info">
      <p class="owner-info">
        Hosted by <strong><%= listing.owner.username %></strong>
      </p>

      <p class="description"><%= listing.description %></p>

      <p class="price">
        â‚¹<%= listing.price.toLocaleString("en-IN") %> <span style="font-size: 1rem; font-weight: 400; color: #717171;">/ night</span>
      </p>
    </div>

    <!-- Edit/Delete Buttons (only for owner) -->
    <% if (currentUser && currentUser._id.equals(listing.owner._id)) { %>
    <div class="action-buttons">
      <a href="/listings/<%= listing._id %>/edit" class="btn btn-edit">
        Edit Listing
      </a>
      <form
        method="post"
        action="/listings/<%= listing._id %>?_method=delete"
        style="display: inline;"
      >
        <button type="submit" class="btn btn-delete">Delete Listing</button>
      </form>
    </div>
    <% } %>

    <!-- Reviews Section -->
    <div class="reviews-section">
      <h4>Reviews</h4>

      <% if (listing.reviews.length === 0) { %>
        <p class="text-muted">No reviews yet. Be the first to review!</p>
      <% } %>

      <% for (let review of listing.reviews) { %>
      <div class="review-card">
        <h6 class="review-author"><%= review.author.username %></h6>
        <p class="starability-result" data-rating="<%= review.rating %>"></p>
        <p><%= review.comment %></p>

        <% if(currentUser && review.author._id.equals(currentUser._id)) { %>
        <form
          method="post"
          action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE"
          style="margin-top: 1rem;"
        >
          <button class="btn btn-sm btn-dark">Delete Review</button>
        </form>
        <% } %>
      </div>
      <% } %>

      <!-- Leave a Review Form -->
      <h4 style="margin-top: 2rem;">Leave a Review</h4>

      <% if(currentUser && !listing.owner._id.equals(currentUser._id)) { %>
      <div class="review-form">
        <form
          action="/listings/<%= listing._id %>/reviews"
          method="post"
          class="needs-validation"
          novalidate
        >
          <div class="mb-3">
            <fieldset class="starability-slot">
              <legend>Rating</legend>
              <input
                type="radio"
                id="no-rate"
                class="input-no-rate"
                name="review[rating]"
                value="0"
                checked
                aria-label="No rating."
              />
              <input type="radio" id="first-rate1" name="review[rating]" value="1" />
              <label for="first-rate1" title="Terrible">1 star</label>
              <input type="radio" id="first-rate2" name="review[rating]" value="2" />
              <label for="first-rate2" title="Not good">2 stars</label>
              <input type="radio" id="first-rate3" name="review[rating]" value="3" />
              <label for="first-rate3" title="Average">3 stars</label>
              <input type="radio" id="first-rate4" name="review[rating]" value="4" />
              <label for="first-rate4" title="Very good">4 stars</label>
              <input type="radio" id="first-rate5" name="review[rating]" value="5" />
              <label for="first-rate5" title="Amazing">5 stars</label>
            </fieldset>
          </div>

          <div class="mb-3">
            <label for="comment" class="form-label">Comment</label>
            <textarea
              name="review[comment]"
              id="comment"
              rows="4"
              class="form-control"
              required
            ></textarea>
            <div class="invalid-feedback">Please add a comment.</div>
          </div>

          <button class="btn btn-dark">Submit Review</button>
        </form>
      </div>
      <% } else if(!currentUser) { %>
      <p class="text-muted">Please <a href="/login">log in</a> to leave a review.</p>
      <% } else { %>
      <p class="text-muted">You cannot review your own listing.</p>
      <% } %>
    </div>

    <!-- Map Section -->
    <% if (listing.geometry && listing.geometry.coordinates) { %>
    <div class="map-section">
      <h3>Where you'll be</h3>
      <div id="map"></div>
    </div>
    <% } else { %>
    <div class="map-section">
      <h3>Where you'll be</h3>
      <p class="text-muted">Location data not available for this listing.</p>
    </div>
    <% } %>
  </div>
</body>

<script src="/js/map.js"></script>