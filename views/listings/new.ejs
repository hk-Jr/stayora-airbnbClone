<% layout("/layouts/boilerplate") %>

<body>
  <div class="edit-container">
    <div class="edit-header">
      <h2>Create a New Listing</h2>
      <p class="text-muted">Share your space with travelers</p>
    </div>

    <div class="form-card">
      <form
        method="post"
        action="/listings"
        novalidate
        class="needs-validation"
        enctype="multipart/form-data"
      >
        <!-- Title -->
        <div class="mb-3">
          <label for="title" class="form-label">Title</label>
          <input
            id="title"
            name="listing[title]"
            placeholder="Give your listing a catchy title"
            type="text"
            class="form-control"
            required
          />
          <div class="invalid-feedback">Please enter a title</div>
        </div>

        <!-- Description -->
        <div class="mb-3">
          <label for="description" class="form-label">Description</label>
          <textarea
            id="description"
            name="listing[description]"
            placeholder="Describe your listing"
            class="form-control"
            rows="4"
            required
          ></textarea>
          <div class="invalid-feedback">Please enter a description</div>
        </div>

        <!-- Upload Image -->
        <div class="mb-3">
          <label for="image" class="form-label">Upload Image</label>
          <input
            id="image"
            name="listing[image]"
            type="file"
            class="form-control"
            accept="image/*"
            required
          />
          <div class="invalid-feedback">Please upload an image</div>
        </div>

        <!-- Price and Country Row -->
        <div class="row">
          <div class="col-md-6 mb-3">
            <label for="price" class="form-label">Price (per night)</label>
            <div class="input-group">
              <span class="input-group-text">â‚¹</span>
              <input
                id="price"
                name="listing[price]"
                placeholder="1200"
                type="number"
                class="form-control"
                required
              />
            </div>
            <div class="invalid-feedback">Please enter a price</div>
          </div>

          <div class="col-md-6 mb-3">
            <label for="country" class="form-label">Country</label>
            <input
              id="country"
              name="listing[country]"
              placeholder="India"
              type="text"
              class="form-control"
              required
            />
            <div class="invalid-feedback">Please enter a country</div>
          </div>
        </div>

        <!-- Location -->
        <div class="mb-3">
          <label for="location" class="form-label">Location</label>
          <input
            id="location"
            name="listing[location]"
            placeholder="Bangalore, Karnataka"
            type="text"
            class="form-control"
            required
          />
          <div class="invalid-feedback">Please enter a location</div>
        </div>

        <!-- Submit Buttons -->
        <button type="submit" class="btn btn-submit">Create Listing</button>
        <a href="/listings" class="btn btn-cancel">Cancel</a>
      </form>
    </div>
  </div>
</body>
