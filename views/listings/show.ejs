<script>
  let mapToken = "<%= mapToken %>";
  <% if (listing.geometry && listing.geometry.coordinates) { %>
    let coordinates = <%- JSON.stringify(listing.geometry.coordinates) %>;
  <% } else { %>
    let coordinates = null;
  <% } %>
</script>

<body>
  <div class="row mt-3">
    <div class="col-8 offset-3">
      <h3><%= listing.title %></h3>
    </div>

    <div class="card col-6 offset-3 show-card listing-card">
      <img
        src="<%= listing.image.url %>"
        class="card-img-top show-image"
        alt="listing"
      />

      <div class="card-body">
        <div class="card-text">
          <p>
            <i><%= listing.owner.username %></i>
          </p>

          <p><%= listing.description %></p>

          <p class="fw-bold text-success">
            &#8377; <%= listing.price.toLocaleString("en-IN") %>
          </p>

          <p class="text-muted mb-0">
            <%= listing.location %><br />
            <%= listing.country %>
          </p>
        </div>
      </div>
    </div>

    <br />
  </div>

  <% if (currentUser && currentUser._id.equals(listing.owner._id)) { %>
  <div class="btns mb-3">
    
      href="/listings/<%= listing._id %>/edit"
      class="btn btn-dark col-1 offset-3 edit-btn"
    >
      Edit
    </a>

    <form
      method="post"
      action="/listings/<%= listing._id %>?_method=delete"
      class="d-inline"
    >
      <button class="btn btn-dark offset-4">Delete</button>
    </form>
  </div>
  <% } %>

  <!-- Review form & showing reviews -->
  <div class="col-8 offset-3 mb-3">
    <div class="row mb-3">
      <hr />
      <h4>All Reviews</h4>

      <% for (let review of listing.reviews) { %>
      <div class="card col-5 ms-3 mb-3">
        <div class="card-body">
          <h5 class="card-title"><%= review.author.username %></h5>

          <p
            class="starability-result card-text"
            data-rating="<%= review.rating %>"
          ></p>

          <p class="card-text">
            <strong>Comment:</strong> <%= review.comment %>
          </p>

          <% if(currentUser && review.author._id.equals(currentUser._id)) { %>
          <form
            method="post"
            action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE"
          >
            <button class="btn btn-sm btn-dark mb-1">Delete</button>
          </form>
          <% } %>
        </div>
      </div>
      <% } %>
    </div>

    <hr />

    <h4>Leave a Review</h4>

    <% if(currentUser && !listing.owner._id.equals(currentUser._id)) { %>
    <form
      action="/listings/<%= listing._id %>/reviews"
      method="post"
      class="form-label needs-validation"
      novalidate
    >
      <div class="mb-3 mt-3">
        <fieldset class="starability-slot">
          <label for="rating" class="form-label">Rating</label>
          <input
            type="radio"
            id="no-rate"
            class="input-no-rate"
            name="review[rating]"
            value="0"
            checked
            aria-label="No rating."
          />
          <input type="radio" id="first-rate1" name="review[rating]" value="1" />
          <label for="first-rate1" title="Terrible">1 star</label>
          <input type="radio" id="first-rate2" name="review[rating]" value="2" />
          <label for="first-rate2" title="Not good">2 stars</label>
          <input type="radio" id="first-rate3" name="review[rating]" value="3" />
          <label for="first-rate3" title="Average">3 stars</label>
          <input type="radio" id="first-rate4" name="review[rating]" value="4" />
          <label for="first-rate4" title="Very good">4 stars</label>
          <input type="radio" id="first-rate5" name="review[rating]" value="5" />
          <label for="first-rate5" title="Amazing">5 stars</label>
        </fieldset>
      </div>

      <div class="mb-3 mt-3">
        <label for="comment" class="form-label">Comment</label>
        <textarea
          name="review[comment]"
          id="comment"
          cols="30"
          rows="5"
          class="form-control"
          required
        ></textarea>
        <div class="invalid-feedback">Add some content as a REVIEW</div>
      </div>

      <button class="btn btn-outline-dark">Submit review</button>
    </form>
    <% } else if(!currentUser) { %>
    <p class="text-muted">Please <a href="/login">login</a> to leave a review.</p>
    <% } else { %>
    <p class="text-muted">You cannot review your own listing.</p>
    <% } %>
  </div>

  <!-- maps -->
  <% if (listing.geometry && listing.geometry.coordinates) { %>
  <div class="col-8 offset-3 mb-3">
    <h3>Where you'll be</h3>
    <div id="map"></div>
  </div>
  <% } else { %>
  <div class="col-8 offset-3 mb-3">
    <h3>Where you'll be</h3>
    <p class="text-muted">Location data not available for this listing.</p>
  </div>
  <% } %>
</body>

<script src="/js/map.js"></script>